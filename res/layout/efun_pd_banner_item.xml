<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/e_f1f1f1" >

    <LinearLayout
        android:id="@+id/banner_item1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:background="@color/e_6fb9f8" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_141"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/banner_notice1"
                android:layout_width="@dimen/e_size_141"
                android:layout_height="@dimen/e_size_141"
                />
            <TextView
                android:id="@+id/banner_title1" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textSize="@dimen/e_text_size_45"
                android:textColor="@color/e_272727"/>
        </LinearLayout>        
        <TextView
            android:id="@+id/banner_content1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/e_size_10"
            android:layout_marginRight="@dimen/e_size_10"
            android:layout_weight="1.0"
            android:textSize="@dimen/e_text_size_35"
            android:textColor="@android:color/white"
             />
        <TextView 
            android:id="@+id/banner_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/e_size_10"
            android:textSize="@dimen/e_text_size_30"
            android:textColor="@android:color/white"/>
    </LinearLayout>

     <LinearLayout
        android:id="@+id/banner_item2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:layout_marginLeft="@dimen/e_size_10"
        android:orientation="vertical"
        android:background="@color/e_6fb9f8" >

         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_141"
            android:orientation="horizontal">
            <ImageView 
                android:id="@+id/banner_notice2"
                android:layout_width="@dimen/e_size_141"
                android:layout_height="@dimen/e_size_141"
                />
            <TextView
                android:id="@+id/banner_title2" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textSize="@dimen/e_text_size_45"
                android:textColor="@color/e_272727"/>
        </LinearLayout>        
        <TextView
            android:id="@+id/banner_content2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/e_size_10"
            android:layout_marginRight="@dimen/e_size_10"
            android:textSize="@dimen/e_text_size_35"
            android:textColor="@android:color/white"
             />
        <TextView
            android:id="@+id/banner_time2" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/e_size_10"
            android:textSize="@dimen/e_text_size_30"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>