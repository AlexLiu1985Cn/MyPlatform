<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contaier_relative_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 背景图片 -->

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_900"
        android:layout_marginTop="@dimen/e_size_300_neg"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/efun_pd_scrollview_header" />

    <com.efun.platform.widget.scroll.PullScrollView
        android:id="@+id/pullScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/e_size_400"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/e_size_150"
                    android:background="@android:color/white" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/e_eeeeee"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/e_size_24"
                            android:layout_marginRight="@dimen/e_size_24"
                            android:background="@android:color/white"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/e_size_10"
                            android:paddingLeft="@dimen/e_size_360"
                            android:textColor="@color/e_8e8e8e"
                            android:textSize="@dimen/e_text_size_35" />

                        <TextView
                            android:id="@+id/text_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/e_size_24"
                            android:layout_marginRight="@dimen/e_size_24"
                            android:background="@android:color/white"
                            android:paddingBottom="@dimen/e_size_10"
                            android:paddingLeft="@dimen/e_size_360"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/e_text_size_40" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/e_size_24"
                            android:layout_marginRight="@dimen/e_size_24"
                            android:background="@android:color/white"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/icon_3"
                                android:layout_width="@dimen/e_size_24"
                                android:layout_height="@dimen/e_size_45"
                                android:layout_marginLeft="@dimen/e_size_360" />

                            <TextView
                                android:id="@+id/text_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/e_size_24"
                                android:text="@string/efun_pd_phone_bind_uncompleted"
                                android:textSize="@dimen/e_text_size_40" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icon_2"
                        android:layout_width="@dimen/e_size_150"
                        android:layout_height="@dimen/e_size_150"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:background="@drawable/efun_pd_recharge_normal"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/e_size_260"
                    android:layout_height="@dimen/e_size_260"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/e_size_70" >

                    <ImageView
                        android:layout_width="@dimen/e_size_260"
                        android:layout_height="@dimen/e_size_260"
                        android:background="@drawable/efun_pd_edging_raido_40_bg" />
                    
                    <ImageView
                        android:id="@+id/icon_1"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/e_size_240"
                        android:layout_height="@dimen/e_size_240"
                        android:background="@drawable/efun_pd_default_user_boy_icon" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/text_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_120"
                    android:layout_marginLeft="@dimen/e_size_24"
                    android:background="@android:color/transparent"
                    android:gravity="bottom"
                    android:paddingLeft="@dimen/e_size_360"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="3.0"
                    android:shadowDy="3.0"
                    android:shadowRadius="5.0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/e_text_size_50" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="@dimen/e_size_24"
                android:layout_marginRight="@dimen/e_size_24"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginLeft="@dimen/e_size_53"
                    android:layout_marginRight="@dimen/e_size_53"
                    android:layout_marginTop="@dimen/e_size_10"
                    android:background="@color/e_a7a7aa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/e_size_10"
                    android:layout_marginLeft="@dimen/e_size_78"
                    android:layout_marginRight="@dimen/e_size_78"
                    android:layout_marginTop="@dimen/e_size_30"
                    android:text="@string/efun_pd_vip_experience"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/e_text_size_40" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/e_size_30"
                    android:orientation="horizontal" >

                    <com.efun.platform.widget.ConsProgressBar
                        android:id="@+id/person_consProgressBar"
                        android:layout_width="0px"
                        android:layout_height="@dimen/e_size_50"
                        android:layout_marginLeft="@dimen/e_size_78"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:layout_weight="1.0" >
                    </com.efun.platform.widget.ConsProgressBar>

                    <TextView
                        android:id="@+id/item_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_40" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginLeft="@dimen/e_size_53"
                    android:layout_marginRight="@dimen/e_size_53"
                    android:background="@color/e_a7a7aa" />

                <LinearLayout
                    android:id="@+id/contaier_linear_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_170"
                    android:background="@drawable/efun_pd_list_item_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_90"
                        android:layout_height="@dimen/e_size_90"
                        android:layout_marginLeft="@dimen/e_size_106"
                        android:background="@drawable/efun_pd_jin_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_40"
                        android:text="@string/efun_pd_credit"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_50" />

                    <TextView
                        android:id="@+id/item_content"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:textColor="@color/e_ff999a"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginLeft="@dimen/e_size_53"
                    android:layout_marginRight="@dimen/e_size_53"
                    android:background="@color/e_a7a7aa" />

                <LinearLayout
                    android:id="@+id/contaier_linear_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_170"
                    android:background="@drawable/efun_pd_list_item_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="@dimen/e_size_90"
                        android:layout_height="@dimen/e_size_90"
                        android:layout_marginLeft="@dimen/e_size_106"
                        android:background="@drawable/efun_pd_tq_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_40"
                        android:text="@string/efun_pd_special_power"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_50" />

                    <TextView
                        android:id="@+id/item_title"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:textColor="@color/e_ff999a"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginLeft="@dimen/e_size_53"
                    android:layout_marginRight="@dimen/e_size_53"
                    android:background="@color/e_a7a7aa"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/contaier_linear_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_170"
                    android:background="@drawable/efun_pd_list_item_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_90"
                        android:layout_height="@dimen/e_size_90"
                        android:layout_marginLeft="@dimen/e_size_106"
                        android:background="@drawable/efun_pd_persion_phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_40"
                        android:text="@string/efun_pd_phone"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_50" />

                    <TextView
                        android:id="@+id/item_category"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:text="@string/efun_pd_phone_bind_now"
                        android:textColor="@color/e_ff999a"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>

                <View
                    android:id="@+id/lineview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginLeft="@dimen/e_size_53"
                    android:layout_marginRight="@dimen/e_size_53"
                    android:background="@color/e_a7a7aa" />

                <LinearLayout
                    android:id="@+id/contaier_linear_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_170"
                    android:background="@drawable/efun_pd_list_item_bg_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/e_size_90"
                        android:layout_height="@dimen/e_size_90"
                        android:layout_marginLeft="@dimen/e_size_106"
                        android:background="@drawable/efun_pd_persion_vip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/e_size_40"
                        android:text="@string/efun_pd_vip_prefecture"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/e_text_size_50" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/e_size_78"
                        android:layout_weight="1.0"
                        android:gravity="right"
                        android:textColor="@color/e_ff999a"
                        android:textSize="@dimen/e_text_size_50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/e_size_1"
                    android:layout_marginLeft="@dimen/e_size_53"
                    android:layout_marginRight="@dimen/e_size_53"
                    android:background="@color/e_a7a7aa" />
            </LinearLayout>
        </LinearLayout>
    </com.efun.platform.widget.scroll.PullScrollView>

</RelativeLayout>