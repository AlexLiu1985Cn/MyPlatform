<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_62"
            android:layout_marginRight="@dimen/e_size_62"
            android:layout_marginTop="@dimen/e_size_62"
            android:text="@string/efun_pd_share_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/e_text_size_40"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/e_size_62"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_width="@dimen/e_size_200"
                    android:layout_height="@dimen/e_size_200"
                    android:layout_centerInParent="true"
                    android:background="@drawable/efun_pd_facebook_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_width="@dimen/e_size_200"
                    android:layout_height="@dimen/e_size_200"
                    android:layout_centerInParent="true"
                    android:background="@drawable/efun_pd_google_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/icon_3"
                    android:layout_width="@dimen/e_size_200"
                    android:layout_height="@dimen/e_size_200"
                    android:layout_centerInParent="true"
                    android:background="@drawable/efun_pd_line_icon" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>