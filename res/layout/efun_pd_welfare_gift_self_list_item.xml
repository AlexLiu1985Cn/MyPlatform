<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/text_1"
        android:layout_marginTop="@dimen/e_size_40"
        android:background="@drawable/efun_pd_cons_code_header"
        android:layout_marginLeft="@dimen/e_size_24"
        android:layout_marginRight="@dimen/e_size_24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_100"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:text="@string/efun_pd_get_reword"
        android:textSize="@dimen/e_text_size_50"
        android:paddingLeft="@dimen/e_size_38"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/e_size_24"
        android:layout_marginRight="@dimen/e_size_24"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_86"
            android:layout_marginLeft="@dimen/e_size_38"
            android:layout_marginRight="@dimen/e_size_38"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:textColor="@color/e_353434"
                android:textSize="@dimen/e_text_size_40" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/e_8e8e8e"
                android:textSize="@dimen/e_text_size_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contaier_linear_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_86"
            android:layout_marginLeft="@dimen/e_size_38"
            android:layout_marginRight="@dimen/e_size_38"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/e_size_40"
                android:text="@string/efun_pd_gift_account"
                android:gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/e_text_size_35" />
            
            <TextView
                android:id="@+id/item_content"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/e_size_48"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_input_bg"
                android:gravity="center"
                android:textColor="@color/e_d39000"
                android:textSize="@dimen/e_text_size_40" />

            <TextView
                android:id="@+id/item_text"
                android:layout_width="@dimen/e_size_136"
                android:layout_height="@dimen/e_size_86"
                android:layout_gravity="center_vertical"
                android:background="@drawable/efun_pd_welfare_button_selector"
                android:gravity="center"
                android:text="@string/efun_pd_copy"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_40" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contaier_linear_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_86"
            android:layout_marginTop="@dimen/e_size_2"
            android:layout_marginLeft="@dimen/e_size_38"
            android:layout_marginRight="@dimen/e_size_38"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/e_size_40"
                android:text="@string/efun_pd_gift_password"
                android:gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/e_text_size_35" />
            
            <TextView
                android:id="@+id/text_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/e_size_48"
                android:layout_weight="1.0"
                android:background="@drawable/efun_pd_input_bg"
                android:gravity="center"
                android:textColor="@color/e_d39000"
                android:textSize="@dimen/e_text_size_40" />

            <TextView
                android:id="@+id/text_3"
                android:layout_width="@dimen/e_size_136"
                android:layout_height="@dimen/e_size_86"
                android:layout_gravity="center_vertical"
                android:background="@drawable/efun_pd_welfare_button_selector"
                android:gravity="center"
                android:text="@string/efun_pd_copy"
                android:textColor="@android:color/black"
                android:textSize="@dimen/e_text_size_40" />
        </LinearLayout>
        
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/e_size_1"
            android:layout_marginTop="@dimen/e_size_30"
            android:background="@color/e_8e8e8e" />
    </LinearLayout>

</LinearLayout>