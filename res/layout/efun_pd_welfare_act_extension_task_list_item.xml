<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/e_size_5"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/text_1"
        android:layout_width="@dimen/e_size_60"
        android:layout_height="@dimen/e_size_60"
        android:gravity="center"
        android:textSize="@dimen/e_text_size_35"
        android:background="@drawable/efun_pd_cons_welfare_task_item_bg"/>
    <TextView 
        android:layout_marginLeft="@dimen/e_size_20"
        android:layout_marginRight="@dimen/e_size_20"
        android:id="@+id/text_2"
        android:layout_weight="1.0"
        android:layout_width="0px"
        android:textSize="@dimen/e_text_size_35"
        android:layout_height="wrap_content"/>
    <ImageView 
        android:id="@+id/imageview"
        android:layout_width="@dimen/e_size_80"
        android:layout_height="@dimen/e_size_80"
        android:background="@drawable/efun_pd_completed_normal"/>
</LinearLayout>