<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/efun_pd_list_item_bg_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/e_size_16"
        android:paddingLeft="@dimen/e_size_38" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/e_size_190"
            android:layout_height="@dimen/e_size_190"
            android:layout_marginBottom="@dimen/e_size_16"
            android:layout_marginTop="@dimen/e_size_14"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/e_size_53"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <com.efun.platform.widget.RoundCornerTextView
                android:id="@+id/item_text"
                android:layout_width="@dimen/e_size_250"
                android:layout_height="@dimen/e_size_60"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/e_text_size_34" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/e_353434"
                android:textSize="@dimen/e_text_size_50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/efun_pd_rest"
                    android:textColor="@color/e_8e8e8e"
                    android:textSize="@dimen/e_text_size_40" />

                <com.efun.platform.widget.CurProgressBar
                    android:id="@+id/curProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/e_size_20"
       				android:minHeight="@dimen/e_size_20"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/efun_pd_progressdialog_before_bg"
                    android:indeterminate="false"
                    android:indeterminateOnly="false"
                    android:paddingLeft="@dimen/e_size_30"
                    android:paddingRight="@dimen/e_size_30"
                    android:layout_marginLeft="@dimen/e_size_15"
                    android:layout_marginRight="@dimen/e_size_24"
                    android:progressDrawable="@drawable/efun_pd_progressdialog_progress_horizontal" />

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/e_f95757"
                    android:layout_marginRight="@dimen/e_size_60"
                    android:textSize="@dimen/e_text_size_40" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/efun_pd_end_date"
                    android:textColor="@color/e_c1c1c1"
                    android:textSize="@dimen/e_text_size_30" />

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/e_c1c1c1"
                    android:textSize="@dimen/e_text_size_30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/e_size_2"
        android:background="@color/e_a7a7aa" />

</LinearLayout>